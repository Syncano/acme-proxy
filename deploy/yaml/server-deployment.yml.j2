kind: Deployment
apiVersion: apps/v1
metadata:
  name: acme-proxy
  labels:
    app: acme-proxy
spec:
  replicas: {{ REPLICAS }}
  selector:
    matchLabels:
      app: acme-proxy

  template:
    metadata:
      labels:
        buildtime: {{ BUILDTIME }}
        app: acme-proxy
  spec:
      terminationGracePeriodSeconds: 360
      imagePullSecrets:
        - name: syncano-k8s-pull-secret
      securityContext:
        fsGroup: 1000
      containers:
        - name: proxy
          image: {{ IMAGE }}
          command:
            - "acme_proxy"
            - "server"
          securityContext:
            runAsGroup: 1000
            runAsNonRoot: true
            runAsUser: 1000
          resources:
            requests:
              memory: "256Mi"
              cpu: 100m
            limits:
              memory: "512Mi"
              cpu: 250m
          ports:
            - name: http
              containerPort: 8000
            - name: https
              containerPort: 8010
            - name: grpc
              containerPort: 9000
            - name: http-metrics
              containerPort: 9080
          env:
            - name: SERVICE_NAME
              value: acme-proxy
            - name: ROUTES_FILE
              value: /etc/acme-proxy/routes/routes.yaml
            - name: LOCAL_CERTS_PATH
              value: /etc/acme-proxy/certs/
          envFrom:
            - configMapRef:
                name: acme-proxy
            - secretRef:
                name: acme-proxy-db-credentials
          livenessProbe:
            httpGet:
              path: /health
              port: 9080
            initialDelaySeconds: 5

          volumeMounts:
            - name: routes
              mountPath: /etc/acme-proxy/routes
            - name: hosting-tls
              mountPath: /etc/acme-proxy/certs/hosting
      volumes:
        - name: routes
          configMap:
            name: acme-proxy-routes
            defaultMode: 0744
        - name: hosting-cert
          secret:
            name: hosting-tls
            defaultMode: 0744
